@model NahhasStatuses

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="container-fluid">

    <h2>Videos</h2>

    <div class="row row-cols-1 row-cols-lg-3 g-4">
        @foreach (var video in Model.Videos)
        {
            <div class="col">
                <div class="card p-2">
                    <h5 class="text-center">@video.Title</h5>
                    <a href="@video.VideoPath">
                        <img src="@video.CoverPath" class="rounded-3 col-12" alt="Image uploading error!" style="height: 256px; object-fit: cover;">
                    </a>
                    @Html.ActionLink("Download", "Download", new { path = video.VideoPath }, new { @class = "btn btn-primary col-12 mt-2" })
                </div>
            </div>
        }
    </div>

    <h2 class="mt-4">Images</h2>

    <div class="row row-cols-1 row-cols-lg-3 g-4">
        @foreach (var image in Model.Images)
        {
            <div class="col">
                <div class="card p-2">
                    <a href="@image.ImagePath">
                        <img src="@image.ImagePath" class="rounded-3 col-12" alt="Image uploading error!" style="height: 256px; object-fit: cover;">
                    </a>
                    <button class="btn btn-primary col-12 mt-2">Download</button>
                </div>
            </div>
        }
    </div>

    <h2 class="mt-4">Quotes</h2>

    <div class="row row-cols-1 row-cols-lg-3 g-4">
        @foreach (var quote in Model.Quotes)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <blockquote class="blockquote mb-0">
                            <p class="text-center">@quote.Content</p>
                        </blockquote>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <button class="btn btn-primary col-12">Copy</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>