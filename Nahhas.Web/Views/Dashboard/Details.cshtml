@model Nahhas.Shared.Entities.Video

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Video
        </dt>
        <dd class="col-sm-10">
            <video controls style="width:256px;height:256px;object-fit:cover;">
                <source src="@Model.VideoPath" type="video/mp4">
                <p>
                    Your browser doesn't support HTML5 video. Here is a <a href="@Model.VideoPath">link to the video</a>
                    instead.
                </p>
            </video>
        </dd>
        <dt class="col-sm-2">
            Cover Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.CoverPath" style="width:256px;height:256px;object-fit:cover;" />
        </dd>
        <dt class="col-sm-2">
            Views
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewsCount)
        </dd>
        <dt class="col-sm-2">
            Likes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LikesCount)
        </dd>
        <dt class="col-sm-2">
            Shares
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SharesCount)
        </dd>
        <dt class="col-sm-2">
            Downloads
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DownloadsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Addition Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionDate)
        </dd>
        <dt class="col-sm-2">
            Last Modified Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
